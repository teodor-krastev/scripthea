<UserControl x:Class="scripthea.composer.CueItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.composer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="gridFullFrame" Margin="0" Background="#FFFFFEEC" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridBg" >
            <RadioButton x:Name="rbChecked" Content="" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" GroupName="RadioSeeds" />
            <CheckBox x:Name="checkBox" Content="" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed"/>
        </Grid>
        <StackPanel Grid.Column="1" Margin="2,3" >
            <TextBox x:Name="tbHeader" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="0.5" BorderBrush="#FFD9DADB" Visibility="Collapsed" Foreground="#FF7C7C7C"/>
            <TextBox x:Name="tbCue" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="1" BorderBrush="#FFD9DADB"/>
            <TextBox x:Name="tbFooter" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="0.5" BorderBrush="#FFD9DADB" Visibility="Collapsed" Foreground="#FF7C7C7C"/>
        </StackPanel>
    </Grid>
</UserControl>
