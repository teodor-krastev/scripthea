<UserControl x:Name="previewItemUC" x:Class="scripthea.preview.PreviewItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.preview"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="gridFullFrame" Margin="0" Background="#FFD5F0FC" PreviewMouseDown="gridFullFrame_PreviewMouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridBg">
            <StackPanel Margin="0,-3,0,0">
                <Label x:Name="lbIndex" HorizontalAlignment="Center" Content="267" Margin="-2,0,0,0"></Label>
                <CheckBox x:Name="checkBox" Margin="0,-2,0,0" HorizontalAlignment="Center" Checked="ItemChanged" Unchecked="ItemChanged"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Column="1" Margin="2,3" >
            <TextBox x:Name="tbHeader" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="0.5" BorderBrush="#FFD9DADB" Visibility="Collapsed" Foreground="#FF7C7C7C" TextChanged="tbCue_TextChanged"/>
            <TextBox x:Name="tbCue" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="1.5,1.2,1,0.5" BorderBrush="#FF838383" TextChanged="tbCue_TextChanged" />
            <TextBox x:Name="tbLLMCue" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="0.5" BorderBrush="#FF0166CB"   Foreground="Navy" Visibility="Collapsed" TextChanged="tbCue_TextChanged"/>
            <TextBox x:Name="tbModifs" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="" FontSize="13" FontStyle="Normal" AcceptsReturn="True" BorderThickness="1,0.5,0.5,1" BorderBrush="DarkGreen" Foreground="#FF003E00" TextChanged="tbCue_TextChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
