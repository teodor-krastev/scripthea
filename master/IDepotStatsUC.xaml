<UserControl x:Class="scripthea.master.IDepotStatsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.master"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="btnCopy" Margin="7,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="{x:Null}" ToolTip="Copy stats to clipboard" Cursor="Hand" Width="30" Height="28" BorderBrush="#FFCECECE" Click="btnCopy_Click" BorderThickness="0.7" Style="{StaticResource RoundedSmallButtonStyle}">
            <ContentControl>
                <Image x:Name="imgCopy" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="25" ToolTip="Copy stats to clipboard" Cursor="Hand" Source="/Scripthea;component/Properties/copy1a.png"/>
            </ContentControl>
        </Button>
        <StackPanel>
            <TextBlock x:Name="tbTitle" Text="Statistics of image depot:" FontSize="14" FontFamily="Segoe UI Semibold" Margin="0,0,0,0" Foreground="Navy" HorizontalAlignment="Left"></TextBlock>
            <GroupBox Header="Image folder" Margin="0,10,0,0" FontFamily="Segoe UI Semibold" BorderBrush="#FFBBD0DD">
                <Grid>
                    <ListBox x:Name="lbImgFolder" BorderBrush="{x:Null}" FontFamily="Segoe UI"></ListBox>
                </Grid>
            </GroupBox>
            <GroupBox Header="Images    size: mean (min . . max)" Margin="0,10,0,0" FontFamily="Segoe UI Semibold" BorderBrush="#FFCACEA8">
                <Grid>
                    <ListBox x:Name="lbImages" BorderBrush="{x:Null}" FontFamily="Segoe UI"></ListBox>
                </Grid>
            </GroupBox>
            <GroupBox Header="Ratings" Margin="0,10,0,0" FontFamily="Segoe UI Semibold" BorderBrush="#FFB9CEAB">
                <Grid>
                    <ListBox x:Name="lbRatings" BorderBrush="{x:Null}" FontFamily="Segoe UI"></ListBox>
                </Grid>
            </GroupBox>
            <GroupBox Header="Common image-generation parameters" Margin="0,10,0,0" FontFamily="Segoe UI Semibold" BorderBrush="#FFB9CEAB">
                <Grid>
                    <ListBox x:Name="lbCommonParams" BorderBrush="{x:Null}" FontFamily="Segoe UI"></ListBox>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
