<UserControl x:Class="scripthea.external.SD_API_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.external"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="105" Width="105">
    <Grid>
        <Label x:Name="lbStatus" Height="28" Content="COMM:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,3" FontSize="13" FontWeight="Bold"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="26" Width="49"  Margin="0,0,5,3" Background="#FFFDD07E" Visibility="Collapsed"/>
        <Button x:Name="btnSDoptions" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="{x:Null}" Width="28" Height="28" Margin="2,0,0,2" Style="{StaticResource RoundedSmallButtonStyle}" ToolTip="SD options">
            <ContentControl>
                <Image x:Name="ibtnOpts" Source="/Scripthea;component/Properties/TripleBarGrey.png" Margin="1,1,0,0" Width="28" Height="28"  
                       Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
            </ContentControl>
        </Button>
        <Label x:Name="lbServer" Content="server" HorizontalAlignment="Left" Margin="38,0,0,0" VerticalAlignment="Bottom" FontSize="14"/>
    </Grid>
</UserControl>
