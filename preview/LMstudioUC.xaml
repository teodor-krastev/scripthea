<UserControl x:Class="scripthea.preview.LMstudioUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.preview"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="0" >
            
            <GroupBox x:Name="gbLMSLoc" BorderBrush="Navy" Header="Location of LM Studio" Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="tbLMSlocation" Margin="0" Height="26" Background="#FFFBFBF4" TextChanged="tbLMSlocation_TextChanged" ></TextBox>
                        <Button x:Name="btnLMSlocation" Grid.Column="1" Content="  Browse  " Height="30" Background="#FFF6FAF1"  Style="{StaticResource RoundedButtonStyle}" Margin="10,0,0,0" FontFamily="Segoe UI Semibold" Click="btnLMSlocation_Click" ></Button>
                        <Button x:Name="btnLMSlaunch" Grid.Column="2" Content="  Launch  " Height="30" Background="#FFFAF9F1"  Style="{StaticResource RoundedButtonStyle}" Margin="5,0,0,0" FontFamily="Segoe UI Semibold" IsEnabled="False" Foreground="#FF707070" Click="btnLMSlaunch_Click" ></Button>
                    </Grid>
            </GroupBox>
            
            <GroupBox x:Name="gbLMSmodel" BorderBrush="SeaGreen" Header="LM Studio model" Margin="0,10,0,0" BorderThickness="1.3,1.3,1.3,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="75"/>
                            
                        </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cbLMSmodels" Margin="0" Height="26" Background="#FFFBFBF4" ></ComboBox>
                    <Button x:Name="btnLMSmodel_load" Grid.Column="1" Content="  Load  " Height="30" Background="#FFF6FAF1" BorderBrush="SeaGreen" Style="{StaticResource RoundedButtonStyle}" Margin="10,0,0,0" FontFamily="Segoe UI Semibold" Click="btnLMSmodel_load_Click"  ></Button>
                    </Grid>
            </GroupBox>
            <GroupBox x:Name="gbLMScontext" BorderBrush="SeaGreen" Header="LM Studio system context " Margin="0,0,0,0" BorderThickness="1.3,1,1.3,1.3">
                <StackPanel Margin="0,0,0,2">
                    <TextBox x:Name="tbLMScontext" Margin="0" Background="#FFFBFBF4" Text=" " TextWrapping="Wrap" AcceptsReturn="True" TextChanged="tbLMScontext_TextChanged" ></TextBox>
                </StackPanel>
            </GroupBox>
            
            <GroupBox x:Name="gbLMStest" BorderBrush="#FF8B312E" Header="LM Studio testing" Margin="0,10,0,0">
                <StackPanel Margin="0,10,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="tbLMStest" Margin="0" Height="26" Background="#FFFBFBF4" Text="Give me a list of 10 mammals" TextWrapping="Wrap" ></TextBox>
                        <Button x:Name="btnLMStest" Grid.Column="1" Content="  A S K  " Height="30" Background="#FFF6FAF1" BorderBrush="#FF8B312E" Style="{StaticResource RoundedButtonStyle}" Margin="10,0,0,0" FontFamily="Segoe UI Semibold" Click="btnLMStest_Click"  ></Button>
                    </Grid>
                    <TextBlock x:Name="tbReply" Text=" " Margin="0,5,0,0" TextWrapping="Wrap"/>

                </StackPanel>
            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
