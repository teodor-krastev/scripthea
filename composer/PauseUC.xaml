<UserControl x:Class="scripthea.composer.PauseUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.composer"
             mc:Ignorable="d" 
             d:DesignHeight="58.365" d:DesignWidth="313.738">
    <Grid>
        <Button x:Name="btnPause" Margin="0,0,3,3" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{x:Null}" ToolTip="Copy current prompt to clipboard" Cursor="Hand" Width="30" Height="28" BorderBrush="#FFCECECE" Click="btnPause_Click" >
            <ContentControl>
                <Image x:Name="imgCopy" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="25" ToolTip="Copy to clipboard" Cursor="Hand" Source="/Scripthea;component/Properties/copy1a.png"/>
            </ContentControl>
        </Button>
        <CheckBox x:Name="chkPause" Content="Pause" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Unchecked="chkPause_Unchecked"/>

    </Grid>
</UserControl>
