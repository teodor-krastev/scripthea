<UserControl x:Class="scripthea.preview.FashioningUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.preview"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800" FontSize="13">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition x:Name="rowText" Height="4*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Fashioning" FontFamily="Segoe UI Semibold" Margin="10,0,0,3" FontSize="14"></TextBlock>
            <RadioButton x:Name="rbNone" Content="None" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" IsChecked="True" FontFamily="Segoe UI Semibold"/>
            <RadioButton x:Name="rbContext" Content="Set Context" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Segoe UI Semibold"/>
            <RadioButton x:Name="rbAskLLM" Content="Ask LLM" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Segoe UI Semibold"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <StackPanel Margin="0,0,0,0" Background="#FFFFFEF4" HorizontalAlignment="Left">
                <Button x:Name="btnUpdate" HorizontalAlignment="Left" Background="White" Margin="4,6,3,3" Click="btnUpdate_Click" Width="24" Height="24" Style="{StaticResource RoundedSmallButtonStyle}">
                    <Image Source="/Scripthea;component/Properties/update.png" Stretch="UniformToFill" Width="18" ToolTip="Update list" Height="18"/>
                </Button>
                <Button x:Name="btnAdd" HorizontalAlignment="Left" Background="White" Margin="3" Click="btnAdd_Click" Width="24" Height="24" Style="{StaticResource RoundedSmallButtonStyle}">
                    <Image Source="/Scripthea;component/Properties/plus.png" Stretch="UniformToFill" Width="16" ToolTip="Add as new item" Height="16" />
                </Button>
                <Button x:Name="btnMinus" HorizontalAlignment="Left" Background="White" Margin="3" Width="24" Click="btnMinus_Click" Height="24" Style="{StaticResource RoundedSmallButtonStyle}">
                    <Image Source="/Scripthea;component/Properties/minus.png" Width="14" Height="22" Stretch="Fill" Margin="0,-1,0,0" ToolTip="Remove selected item"/>
                </Button>
            </StackPanel>
            <Grid Margin="4,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="cbCons" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="cbCons_SelectionChanged" Margin="0,0,3,0.333" >
                    <!-- Stretch item containers so wrapping can happen -->
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>

                    <!-- Each item uses a wrapping TextBlock -->
                    <ComboBoxItem>
                        <TextBlock Text="Short" TextWrapping="Wrap"/>
                    </ComboBoxItem>

                    <ComboBoxItem>
                        <TextBlock Text="This is a very long sentence that should wrap to multiple lines inside the dropdown."
                           TextWrapping="Wrap" Background="#FFDEFFF6"/>
                    </ComboBoxItem>

                    <ComboBoxItem>
                        <TextBlock Text="Line 1&#x0a;Line 2&#x0a;Line 3"
                           TextWrapping="Wrap"/>
                    </ComboBoxItem>
                </ComboBox>
                <TextBox x:Name="tbEditor" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  TextWrapping="Wrap" Margin="0,0,20,-0.667" Grid.Column="0"/>
                <GridSplitter HorizontalAlignment="Left" Width="3" Grid.Column="1" Background="#FFFCFCD8">

                </GridSplitter>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
